<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="0dp"
    android:background="@color/white"
    app:cardCornerRadius="0dp"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>

    <ImageView
        android:id="@+id/bottom_pop_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="90"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/dots"
        app:tint="@color/white" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/newsImage"
        android:textColor="#5A5A5A"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/raleway_bold"
        android:elevation="3dp"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/app_name_bg"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:text="NewsNook" />

    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/newsImage"
        android:textColor="#2F628E"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:fontFamily="@font/raleway_bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/newsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsTitle"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="3"
        android:fontFamily="@font/raleway_medium"
        android:text="TextView" />

    <TextView
        android:id="@+id/newsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_below="@id/newsDescription"
        android:maxLines="5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/raleway_regular"
        android:text="TextView" />

    <TextView
        android:id="@+id/newsSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#858585"
        android:textSize="10sp"
        android:layout_below="@id/newsContent"
        android:maxLines="5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bellota_regular"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#80000000">

    <TextView
        android:id="@+id/newsAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/raleway_bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/newsPublishedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/raleway_regular"
        android:text="TextView" />

    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>